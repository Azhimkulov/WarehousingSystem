<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_certain_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    tools:context="ru.startandroid.develop.korusant.CertainCalcActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/avatar_image_calc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/name_txt_calc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/kind_txt_calc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/number_txt_calc"/>
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOff="Портьер"
                android:textOn="Тюль"
                android:layout_marginBottom="7dp"
                android:id="@+id/type_switch_calc"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:focusable="false"
        android:textAlignment="center"
        android:cursorVisible="true"
        android:background="#fff"
        android:id="@+id/number_edit_calc"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#67b920">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продано"
            android:textSize="15dp"
            android:id="@+id/sell_radio_calc"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Произведено"
            android:textSize="15dp"
            android:id="@+id/made_radio_calc"
            android:layout_gravity="end"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/one_btn_calc"
                android:elevation="24dp" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:id="@+id/two_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"
                android:id="@+id/three_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20dp"
                android:id="@+id/plus_btn_calc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="20dp"
                android:id="@+id/four_btn_calc"/>
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20dp"
                android:id="@+id/five_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="20dp"
                android:id="@+id/six_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp"
                android:id="@+id/minus_btn_calc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20dp"
                android:id="@+id/seven_btn_calc"/>
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="20dp"
                android:id="@+id/eight_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20dp"
                android:id="@+id/nine_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="20dp"
                android:id="@+id/dev_btn_calc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="20dp"
                android:id="@+id/back_btn_calc"/>
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/zero_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="20dp"
                android:id="@+id/delete_btn_calc" />
            <Button
                android:layout_width="@dimen/size_button"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="20dp"
                android:id="@+id/multi_btn_calc" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:id="@+id/update_btn_calc"/>

    </LinearLayout>

</LinearLayout>
